@model BookStore.Models.UserModel

@{
    ViewData["Title"] = "Reserved Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.id</h2>
<h1>Reserved books:</h1>
<br/>
<!-- Book List -->
@if (Model.Books!=null)
{
    <div class="row">
        @foreach (var book in Model.Books)
        {
            if (book.Stock != 0)
            {
                <div class="card" style="width: 18rem;">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">@book.Desc</p>
                        <div class="card-footer row align-items-end">
                            <div class="col">
                                <p>Stock: @book.Stock.ToString()</p>
                            </div>
                            <div class="col">
                                <a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="ReturnBook" asp-route-id="@book.id">Return</a>

                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
}
else
{
    
}
